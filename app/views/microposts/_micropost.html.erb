
<!-- micropost partial -->
<div class="col-lg-4 col-md-4 col-sm-4 gallery">
  <li id="micropost-<%= micropost.id %>">
    <%= image_tag micropost.picture.url if micropost.picture? %>
  
    <!-- if the picture was posted by you,display created at
       and by followers,display their name and link -->
    <% if current_user == micropost.user %>
      <span class="timestamp">
      <br/ >
        <%= time_ago_in_words(micropost.created_at) %> 前に投稿されました.
      </span>
      <%= link_to "delete", micropost, method: :delete,
                                      data: { confirm: "本当に削除してもよろしいですか？" } %>
　  <% else %>
　    <%= link_to micropost.user.username , user_path(micropost.user)  %>さんが投稿しました
　  <% end %>
　
  </li>
</div>
